<WelcomeScreen>:
    BoxLayout:
        padding: dp(40)
        orientation: 'vertical'
        Image:
            source: 'assets/icons/logo.jpg'
            size_hint_y: 1
            allow_stretch: True
            keep_ratio: True
        Widget:
            size_hint_y: 0.4
        Label:
            text: 'ArtikGram - The Ultimate Telegram Client'
            font_size: sp(24)
            size_hint_y: 0.2
            text_size: self.width, None
            halign: 'center'
        Widget:
            size_hint_y: 0.2
        Button:
            text: 'Start!'   
            size_hint: (0.9, None)
            height: dp(60)
            pos_hint: {'center_x': 0.5}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: (0.314, 0.0, 1, 1) if self.state == 'normal' else (0.251, 0.588, 0.588, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [dp(15),]
            on_press: 
                app.root.current = 'login1'

<LoginScreen1>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(20)
        Widget:
            size_hint_y: 0.2
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.5
            spacing: dp(15)
            padding: [dp(20), 0]
            Label:
                text: 'Enter your phone number'
                font_size: sp(20)
                bold: True
                size_hint_y: None
                height: dp(30)
                text_size: self.width, None
                halign: 'center'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.9, None)
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                spacing: dp(10)
                TextInput:
                    id: country_code_input
                    text: '+7'
                    hint_text: '+code'
                    multiline: False
                    font_size: sp(18)
                    size_hint_x: 0.3
                    padding: [dp(15), dp(15)]
                    background_normal: ''
                    background_active: ''
                    cursor_color: 0.314, 0.0, 1, 1
                    foreground_color: 0, 0, 0, 1
                    canvas.before:
                        Color:
                            rgba: (0.95, 0.95, 0.95, 1) if self.focus else (0.9, 0.9, 0.9, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(10),]
                    on_text: 
                        app.format_country_code(self)
                TextInput:
                    id: phone_input
                    hint_text: '9999999999'
                    multiline: False
                    font_size: sp(18)
                    size_hint_x: 0.7
                    padding: [dp(15), dp(15)]
                    background_normal: ''
                    background_active: ''
                    cursor_color: 0.314, 0.0, 1, 1
                    foreground_color: 0, 0, 0, 1
                    input_filter: 'int' 
                    canvas.before:
                        Color:
                            rgba: (0.95, 0.95, 0.95, 1) if self.focus else (0.9, 0.9, 0.9, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(10),]
                    on_text: 
                        app.format_phone_number(self)
            Label:
                id: formatted_phone_label
                text: '+7'
                font_size: sp(14)
                color: 0.4, 0.4, 0.4, 1
                size_hint_y: None
                height: dp(25)
                text_size: self.width, None
                halign: 'center'
            Label:
                text: 'A verification code will be sent to this number'
                font_size: sp(12)
                color: 0.6, 0.6, 0.6, 1
                size_hint_y: None
                height: dp(20)
                text_size: self.width, None
                halign: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            padding: [dp(40), 0]
            Button:
                id: continue_button
                text: 'Continue'   
                size_hint: (0.8, None)
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                background_color: (0.314, 0.0, 1, 1) if not self.disabled else (0.7, 0.7, 0.7, 1)
                font_size: sp(16)
                bold: True
                disabled: True
                on_press: 
                    self.background_color = (0.2, 0.0, 0.8, 1)
                    app.process_phone_number(country_code_input.text, phone_input.text)
                on_release: 
                    self.background_color = (0.314, 0.0, 1, 1) if not self.disabled else (0.7, 0.7, 0.7, 1)
                canvas.before:
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(12),]
        Widget:
            size_hint_y: 0.1

<LoginScreen2>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(20)
        Widget:
            size_hint_y: 0.2
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.3
            spacing: dp(15)
            padding: [dp(20), 0]
            Label:
                text: 'Enter verification code'
                font_size: sp(20)
                bold: True
                size_hint_y: None
                height: dp(30)
                text_size: self.width, None
                halign: 'center'
            TextInput:
                id: code_input
                hint_text: '12345'
                multiline: False
                font_size: sp(16)
                size_hint_x: 0.8
                height: dp(20)
                pos_hint: {'center_x': 0.5}
                padding: [dp(10), dp(8)]
                background_normal: ''
                background_active: ''
                cursor_color: 0.314, 0.0, 1, 1
                foreground_color: 0, 0, 0, 1
                input_filter: 'int' 
                canvas.before:
                    Color:
                        rgba: (0.95, 0.95, 0.95, 1) if self.focus else (0.9, 0.9, 0.9, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(8),]
            Label:
                text: 'Enter the code sent to your phone'
                font_size: sp(12)
                color: 0.6, 0.6, 0.6, 1
                size_hint_y: None
                height: dp(20)
                text_size: self.width, None
                halign: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            padding: [dp(40), 0]
            spacing: dp(10)
            Button:
                id: verify_button
                text: 'Verify Code'   
                size_hint: (0.8, None)
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                background_color: (0.314, 0.0, 1, 1)
                font_size: sp(16)
                bold: True
                on_press: 
                    self.background_color = (0.2, 0.0, 0.8, 1)
                    app.process_verification_code(code_input.text)
                on_release: 
                    self.background_color = (0.314, 0.0, 1, 1)
                canvas.before:
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(12),]
            Button:
                id: resend_button
                text: 'Resend Code'   
                size_hint: (0.6, None)
                height: dp(40)
                pos_hint: {'center_x': 0.5}
                background_color: (0.6, 0.6, 0.6, 1)
                font_size: sp(14)
                on_press: 
                    self.background_color = (0.4, 0.4, 0.4, 1)
                    app.resend_code()
                on_release: 
                    self.background_color = (0.6, 0.6, 0.6, 1)
                canvas.before:
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(10),]
        Widget:
            size_hint_y: 0.1

<LoginScreen3>:
    password_hint: ""
    
    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(20)
        Widget:
            size_hint_y: 0.1
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.4
            spacing: dp(15)
            padding: [dp(20), 0]
            Label:
                text: 'Two-Step Verification'
                font_size: sp(20)
                bold: True
                size_hint_y: None
                height: dp(30)
                text_size: self.width, None
                halign: 'center'
            Label:
                id: hint_label
                text: 'Enter your password' if not root.password_hint else f'Password hint: {root.password_hint}'
                font_size: sp(14)
                color: 0.4, 0.4, 0.4, 1
                size_hint_y: None
                height: dp(40)
                text_size: self.width, None
                halign: 'center'
                text_size: self.width, None
            TextInput:
                id: password_input
                hint_text: 'Password'
                multiline: False
                font_size: sp(16)
                size_hint_x: 0.8
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                padding: [dp(15), dp(15)]
                password: True  # Скрываем ввод пароля
                background_normal: ''
                background_active: ''
                cursor_color: 0.314, 0.0, 1, 1
                foreground_color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: (0.95, 0.95, 0.95, 1) if self.focus else (0.9, 0.9, 0.9, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10),]
            Label:
                text: 'This account is protected with two-step verification'
                font_size: sp(12)
                color: 0.6, 0.6, 0.6, 1
                size_hint_y: None
                height: dp(20)
                text_size: self.width, None
                halign: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            padding: [dp(40), 0]
            spacing: dp(10)
            Button:
                id: verify_button
                text: 'Verify Password'   
                size_hint: (0.8, None)
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                background_color: (0.314, 0.0, 1, 1)
                font_size: sp(16)
                bold: True
                on_press: 
                    self.background_color = (0.2, 0.0, 0.8, 1)
                    root.on_verify_pressed()
                on_release: 
                    self.background_color = (0.314, 0.0, 1, 1)
                canvas.before:
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(12),]
        Widget:
            size_hint_y: 0.1

<ChatItem>:
    canvas.before:
        Color:
            rgba: (0.9, 0.9, 0.9, 1)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0.7, 0.7, 0.7, 1)
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1

    # Аватар (простая заглушка)
    Label:
        text: root.title[0].upper() if root.title else '?'
        size_hint_x: None
        width: 50
        color: (0, 0, 0, 1)
        font_size: '20sp'
        bold: True
        canvas.before:
            Color:
                rgba: (0.8, 0.8, 1, 1)
            Ellipse:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [10, 5]
        spacing: 2
        
        Label:
            text: root.title
            size_hint_y: 0.6
            color: (0, 0, 0, 1)
            font_size: '16sp'
            bold: True
            text_size: self.width, None
            halign: 'left'
            valign: 'middle'
        
        Label:
            text: root.preview
            size_hint_y: 0.4
            color: (0.3, 0.3, 0.3, 1)
            font_size: '12sp'
            text_size: self.width, None
            halign: 'left'
            valign: 'middle'

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        
        # Шапка
        BoxLayout:
            size_hint_y: None
            height: 60
            padding: [10, 5]
            spacing: 10
            canvas.before:
                Color:
                    rgba: (0.314, 0.0, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                text: 'ArtikGram - Chats'
                color: (1, 1, 1, 1) 
                font_size: '20sp'
                bold: True
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
            
            Button:
                text: 'Logout'
                size_hint_x: None
                width: 100
                background_color: (0, 0, 0, 0)
                color: (1, 1, 1, 1)
                on_press: root.logout()
                canvas.before:
                    Color:
                        rgba: (0.8, 0.2, 0.2, 0.8)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [5,]
        
        # Список чатов
        ScrollView:
            id: chat_scroll_view
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['bars', 'content']
            bar_width: 10
            
            BoxLayout:
                id: chat_list_layout
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 2
                padding: [0, 0, 10, 0]
ScreenManager:
    WelcomeScreen:
        name: 'welcome'
    LoginScreen1:
        name: 'login1'
    LoginScreen2:
        name: 'login2'
    LoginScreen3:
        name: 'login3'
    HomeScreen:
        name: 'homescreen'