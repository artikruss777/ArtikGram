#:kivy 1.0

<WelcomeScreen>:
    BoxLayout:
        padding: 20
        orientation: 'vertical'
        Label:
            text: 'ArtikGram - The Ultimate Telegram Client'
        Button:
            text: 'Start!'   
            size_hint: None, None
            size: 200, 60
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}  # 30% от низа экрана
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: (0.2, 0.6, 1.0, 1) if self.state == 'normal' else (0.1, 0.5, 0.8, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15,]